<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/out_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/going"
            app:layout_constraintBottom_toBottomOf="@+id/guideline1"
            app:layout_constraintEnd_toEndOf="@+id/airline_out_txt"
            app:layout_constraintStart_toStartOf="@+id/airline_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline1" />

        <ImageView
            android:id="@+id/image_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:rotation="180"
            android:scaleType="centerInside"
            android:src="@drawable/ic_green_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/guideline1"
            app:layout_constraintEnd_toEndOf="@+id/time_out_txt"
            app:layout_constraintStart_toStartOf="@+id/time_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline1" />

        <TextView
            android:id="@+id/date_out_txt"
            style="@style/RoundTripCardText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Quarta, 08 de dezembro"
            app:layout_constraintBottom_toBottomOf="@+id/guideline1"
            app:layout_constraintEnd_toEndOf="@+id/arrival_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline1" />

        <TextView
            android:id="@+id/airline_out_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            tools:text="Gol"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/time_out_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

        <TextView
            android:id="@+id/time_out_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="06:55"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/airline_out_txt"
            app:layout_constraintEnd_toStartOf="@+id/duration_out_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/airline_out_txt"
            app:layout_constraintTop_toTopOf="@+id/airline_out_txt" />

        <TextView
            android:id="@+id/duration_out_txt"
            style="@style/RoundTripCardText.Medium"
            android:layout_width="wrap_content"
            tools:text="1h55"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/time_out_txt"
            app:layout_constraintEnd_toStartOf="@+id/arrival_out_txt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/time_out_txt"
            app:layout_constraintTop_toTopOf="@+id/time_out_txt" />

        <TextView
            android:id="@+id/arrival_out_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            tools:text="07:51"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/duration_out_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/duration_out_txt"
            app:layout_constraintTop_toTopOf="@+id/duration_out_txt" />

        <TextView
            android:id="@+id/code_out_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="@+id/airline_out_txt"
            app:layout_constraintStart_toStartOf="@+id/airline_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            tools:text="G33450" />

        <TextView
            android:id="@+id/departure_out_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="@+id/time_out_txt"
            app:layout_constraintStart_toStartOf="@+id/time_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            tools:text="CNF" />

        <TextView
            android:id="@+id/type_out_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="@+id/duration_out_txt"
            app:layout_constraintStart_toStartOf="@+id/duration_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            tools:text="Voo direto" />

        <TextView
            android:id="@+id/destination_out_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="@+id/arrival_out_txt"
            app:layout_constraintStart_toStartOf="@+id/arrival_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            tools:text="GIG" />

        <TextView
            android:id="@+id/in_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/returned"
            app:layout_constraintBottom_toBottomOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="@+id/code_out_txt"
            app:layout_constraintStart_toStartOf="@+id/code_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <ImageView
            android:id="@+id/image_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:scaleType="centerInside"
            android:src="@drawable/ic_green_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="@+id/time_out_txt"
            app:layout_constraintStart_toStartOf="@+id/time_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <TextView
            android:id="@+id/date_in_txt"
            style="@style/RoundTripCardText.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Quarta, 09 de dezembro"
            app:layout_constraintBottom_toBottomOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="@+id/arrival_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <TextView
            android:id="@+id/airline_in_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Gol"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="@+id/code_out_txt"
            app:layout_constraintStart_toStartOf="@+id/code_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <TextView
            android:id="@+id/time_in_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="06:55"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="@+id/departure_out_txt"
            app:layout_constraintStart_toStartOf="@+id/departure_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <TextView
            android:id="@+id/duration_in_txt"
            style="@style/RoundTripCardText.Medium"
            android:layout_width="wrap_content"
            tools:text="1h55"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="@+id/type_out_txt"
            app:layout_constraintStart_toStartOf="@+id/type_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <TextView
            android:id="@+id/arrival_in_txt"
            style="@style/RoundTripCardText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="07:51"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="@+id/destination_out_txt"
            app:layout_constraintStart_toStartOf="@+id/destination_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <TextView
            android:id="@+id/code_in_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="@+id/code_out_txt"
            app:layout_constraintStart_toStartOf="@+id/code_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            tools:text="G33450" />

        <TextView
            android:id="@+id/departure_in_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="@+id/departure_out_txt"
            app:layout_constraintStart_toStartOf="@+id/departure_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            tools:text="CNF" />

        <TextView
            android:id="@+id/type_in_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="@+id/type_out_txt"
            app:layout_constraintStart_toStartOf="@+id/type_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            tools:text="Voo direto" />

        <TextView
            android:id="@+id/destination_in_txt"
            style="@style/RoundTripCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="@+id/destination_out_txt"
            app:layout_constraintStart_toStartOf="@+id/destination_out_txt"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            tools:text="GIG" />

        <View
            android:id="@+id/dashed1_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dashed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <View
            android:id="@+id/dashed2_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/dashed"
            app:layout_constraintBottom_toTopOf="@+id/buy_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buy_button"
            style="@style/default_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Comprar R$ 355,39" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".23" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".30" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".45" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".58" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".68" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimaryBackground</item>
    </style>

    <style name="edit_text">
        <item name="android:textColorHint">@color/cool_grey</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">@style/default_textAppearance</item>
    </style>

    <style name="default_textAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ff_montserrat</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="default_textAppearance_bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ff_montserrat_bold</item>
    </style>

    <style name="default_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/default_textAppearance_bold</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

</resources>
